<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                x:Class="PanicButtonApp.Views.TipFormPopup">

    <Frame Padding="20">
        <StackLayout Spacing="20">
            <Entry x:Name="TitleEntry" Placeholder="Enter Tip Title" />
            <Entry x:Name="DescriptionEntry" Placeholder="Enter Tip Description" />

            <Button Text="Save" 
                    Clicked="OnSaveClicked"
                    Margin="10,10" 
                    BackgroundColor="Red"
                    BorderColor="Black"
                    TextColor="White" 
                    FontSize="Body"
                    CornerRadius="10"/>
            <Button Text="Cancel" 
                    Clicked="OnCancelClicked"
                    Margin="10,10" 
                    BackgroundColor="Red"
                    BorderColor="Black"
                    TextColor="White" 
                    FontSize="Body"
                    CornerRadius="10"/>
        </StackLayout>
    </Frame>
</popup:PopupPage>
