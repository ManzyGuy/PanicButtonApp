             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:PanicButtonApp.ViewModels"
             x:Class="PanicButtonApp.Views.ContactsPage">

    <!--Don't add the datatype-->
    
